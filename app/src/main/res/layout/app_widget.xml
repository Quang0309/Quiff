<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00696969"
    android:padding="@dimen/widget_margin"
    >



    <ImageView
        android:id="@+id/appwidget_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/section_id"

        android:layout_marginStart="8dp"
        android:paddingTop="10dp"

        />

      <LinearLayout
          android:id="@+id/section_id"
          android:layout_width="300dp"
          android:layout_height="wrap_content"
          android:layout_marginStart="8dp"
          android:layout_toEndOf="@id/appwidget_img"
          android:orientation="vertical"
          android:padding="10dp"

        >

          <TextView

              android:id="@+id/appwidget_text"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/bg_screen3"
              android:textSize="18sp" />

          <TextView
              android:id="@+id/appwidget_date"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/bg_screen3"
              android:textSize="18sp" />
          <TextView
              android:id="@+id/appwidget_announcement"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
                android:textStyle="italic"

              android:text="Coming event"

              android:textColor="@color/bg_screen3"
              android:textSize="15sp"
              />
      </LinearLayout>
</RelativeLayout>